    <div class="col-sm-3 flip-card margin-3em-top-bottom" style='margin-right: 10%;' data-flipname="<%= flip.name %>" >
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <%= image_tag(card.img_url, id: "card_show_img_face", class: "card_show transform", hi_res_src: card.hi_res_img, original_src: card.img_url) %>
          <%= image_tag("/assets/foil overlay", class: "hidden foil-overlay show-pg-foil flip-foil foil-overlay-js #{@card.frame == 2015 ? 'post-2015-foil' : ''}") %>
        </div>
        <div class="flip-card-back">
          <%= image_tag(flip.img_url, id: "card_show_img_back", class: "card_show transform", hi_res_src: flip.hi_res_img, original_src: flip.img_url) %>
          <%= image_tag("/assets/foil overlay", class: "hidden foil-overlay show-pg-foil flip-foil foil-overlay-js #{@card.frame == 2015 ? 'post-2015-foil' : ''}") %>
        </div>
      </div>
    </div>