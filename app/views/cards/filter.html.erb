<% if color_to_mana(params[:filter]) != params[:filter] %>
  <center> <h1> <%= image_tag "mana_symbols/#{color_to_mana(params[:filter])}", class: "spin" %> </h1></center>
<% else %>
  <center> <h1> <%= params[:filter] %> </h1> </center>
<% end %>

<% @cards.each do | card | %> 
  <% unless is_modern_or_basic_land?(card) %>
  <h2> <%= card.name %> </h2> 
  <div class = "col-sm-2 filter"> <%= link_to ( image_tag card.img_url, class: "filter-img #{card.edition.downcase}" ), card_path(card) %> </div>
  <% end %>
<% end %>