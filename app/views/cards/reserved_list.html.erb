<% title("MTG - Reserved List Cards") %>

<h1 class='text-center'> Reserved List </h1>

<h2 style='text-align: center'> <%== pagy_bootstrap_nav(@pagy) %> </h2>

<% @cards.each_with_index do | card, idx| %> 
  <h2> <%= card.name %> </h2> 

  <div class = "col-sm-2 filter"> 
    <%= link_to ( image_tag card.img_url, class: "filter-img #{card.edition.downcase}", lazy: (true if idx > 5) ), card_path(card.edition, card.name) %> 
  </div>
<% end %>