<% unless @matches.empty? && @partial_matches.empty? %>

  <div class="row">
    <div class="col-sm-4 text-center">
      <h1> Matches: </h1>

      <% hashify_search_results(@matches).each do | card | %>
        <li class="card">
          <div class="btn btn-med" data-toggle="popover" data-url="<%= card[:img_url] %>" title=" "> 
            <%= link_to(card[:name], card_path(card[:edition], card[:name]), class: "popover-card") %> 
          </div>
        </li>
      <% end %>
    </div>

    <div class="col-sm-4"></div>

    <div class="col-sm-4 text-center">
      <h1> Partial Matches: </h1>
      
      <% hashify_search_results(@partial_matches).each do | card | %>
        <li class="card">
          <div class="btn btn-med" data-toggle="popover" data-url="<%= card[:img_url] %>" data-placement="left" title=" "> 
            <%= link_to(card[:name], card_path(card[:edition], card[:name]), class: "popover-card") %> 
          </div>
        </li>
      <% end %>
    </div>
  </div>

<% else %>
  <h1> No results found. </h1>
<% end %>