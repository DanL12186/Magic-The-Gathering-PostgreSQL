<h1> <%= link_to "<-Home", root_path %> </h1>

<center> <h1> <%= @deck.name %> </h1> </center>
<br>
<center> <h4> Turn 1 </h4></center>
<br>

<div class = "row" >
  <% @sample_hand.each do | card | %>
    <div class = 'col-sm-1 filter'> 
      <b> <%= card.name %> </b>
      
      <%= image_tag card.img_url, class: 'hand-card' %>
    </div>
  <% end %>
  <div class = "stats" >
    <h2> Lands: <%= @stats_hash['lands'] %>
    <h2> Spells: <%= @stats_hash['spells'] %>
    <h2> Artifacts: <%= @stats_hash['artifacts'] %>
    <h2> Creatures: <%= @stats_hash['creatures'] %>
  </div>
</div>

<br>
<br>
<br>

<div class = "row">
  <center> <h1> Upcoming Cards </h1> </center>
  <br>
  <br>
  <% @next_eight_cards.each.with_index(2) do | card, idx | %>
    <div class = 'col-sm-1 filter'>
      <center> Turn <%= idx %> </center>
      <center> <b> <%= card.name %> </b> </center>
        
      <%= image_tag card.img_url,  class: 'hand-card' %>
    </div>
  <% end %>
</div>