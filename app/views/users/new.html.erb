<% title('Sign up') %>

<h1> Sign Up </h1>

<%= form_for @user, url: url_for(action: 'create') do | f | %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :verify_password %>
  <%= f.password_field :password_confirmation %> <br>
  <br>
  <%= f.submit %>
<% end %>